<%- include('./partials/header') %>

<div class="w-full h-screen flex flex-col justify-center items-center">
    
    <!-- Welcome Message -->
    <div class="mb-20 mt-[-250px]">
        <h3 class="text-5xl font-semibold">
            Welcome, <span class="text-blue-500"><%= user.fullname %></span>
        </h3>
    </div>

    <!-- Account Details Heading -->
    <div class="mb-20">
        <h4 class="text-3xl ">Account Details</h4>
    </div>

    <!-- User Details Box -->
    <div class="w-1/3 p-8 shadow bg-zinc-100 rounded-lg text-center">
        <h2 class="mb-5 text-xl font-semibold">User Name: <span class="text-blue-500"><%= user.fullname %></span></h2>
        <h2 class="mb-5 text-xl font-semibold">User Email: <span class="text-blue-500"><%= user.email %></span></h2>
        <h2 class="mb-5 text-xl font-semibold">Cart Items: <span class="text-blue-500"><%= cartCount %></span></h2>
        <a href="/users/delete" class="text-red-600 text-xl font-semibold">Delete Account</a>
    </div>

</div>

</body>
</html>









