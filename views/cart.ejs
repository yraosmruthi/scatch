<%- include('./partials/header') %>
<div class="container mx-auto px-20 py-20">
    <h1 class="text-4xl font-semibold flex justify-center align-center mb-20 mt-[-70px]">CART</h1>
  <% user.cart.forEach(function(item, index){ %>
    <div class="flex items-start space-x-4 mb-4 border-b pb-4">
      <div class="w-1/4 rounded-md overflow-hidden">
        <div class="w-full h-40 flex justify-center items-center bg-[#<%= item.bgcolor %>]">
          <img class="max-h-full max-w-full object-contain" 
               src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" 
               alt="<%= item.name %>">
        </div>
        
        <div class="w-full bg-[#<%= item.panelcolor %>] flex justify-between px-3 py-2">
          <h3 class="text-base font-medium"><%= item.name %></h3>
          <div class="flex items-center space-x-1">
            <button class="w-6 h-6 bg-white rounded-full flex items-center justify-center">
              <i class="ri-add-line text-sm"></i>
            </button>
            <div class="px-1.5 py-0.5 rounded-md bg-white text-black text-sm">01</div>
            <button class="w-6 h-6 bg-white rounded-full flex items-center justify-center">
              <i class="ri-subtract-line text-sm"></i>
            </button>
          </div>
        </div>
        
        <div class="w-full bg-[#<%= item.textcolor %>] flex justify-between px-3 py-2">
          <h3 class="text-sm">Net Total</h3>
          <h2 class="text-sm font-semibold">₹ <%= item.discount + platformFee %></h2>
        </div>
      </div>
      
      <div class="w-3/4 pl-4">
        <h3 class="text-lg font-semibold mb-3">Price Breakdown</h3>
        <div class="space-y-1.5">
          <div class="flex justify-between text-sm">
            <span class="w-1/3">Total MRP</span>
            <span>₹ <%= item.price %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="w-1/3">Discount on MRP</span>
            <span>₹ <%= item.price - item.discount %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="w-1/3">Platform Fee</span>
            <span>₹ 20</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="w-1/3">Shipping Fee</span>
            <span class="text-green-600">FREE</span>
          </div>
        </div>
        
        <div class="border-t border-gray-300 my-3"></div>
        
        <div class="flex justify-between">
          <span class="text-base font-semibold">Total Amount</span>
          <span class="text-green-900 text-base">₹ <%= item.discount + platformFee %></span>
        </div>
      </div>
    </div>
  <% }); %>
  
  <div class="mt-4 flex justify-end items-center  gap-[850px]">
    <span class="text-base text-xl font-semibold">Final Amount</span>
    <span><%= totalprice %></span>
  </div>
  
</div>
</body>
</html>